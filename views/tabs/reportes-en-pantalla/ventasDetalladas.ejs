<body>
    <h1 class="title">Ventas Detalladas</h1>
    <form id="turno-form">
        <label for="ventasPorTurno">Ventas Por Turno:</label>
        <div class="break"></div>
        <input type="radio" id="todas" name="seleccion" value="todas-v" checked="checked">
        <label for="todas">Todas</label><br>
        <input type="radio" id="contado" name="seleccion" value="contado-v">
        <label for="contado">Efectivo</label><br>
