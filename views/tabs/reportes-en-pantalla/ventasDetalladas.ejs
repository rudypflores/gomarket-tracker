            <div class="column" style="flex-basis:17%; background-color: #356986;">
                <div class="row-title">Descripci√≥n</div>
            </div>
            <div class="column" style="flex-basis:17%; background-color: #224a67;">
                <div class="row-title">P/Unidad</div>
            </div>
            <div class="column" style="flex-basis:17%; background-color: #356986;">
                <div class="row-title">P/Total</div>
            </div>
        </div>
        <h2 id="totalVentas"></h2>
    </form>
