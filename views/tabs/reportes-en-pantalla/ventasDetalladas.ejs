        <label for="credito">Credito</label>
        <div class="break"></div>
        <label for="ventasPorTurno">Total de Ventas</label>
        <div class="break"></div>
        <input type="radio" id="todas" name="seleccion" value="todas-t">
        <label for="todas">Todas</label><br>
        <input type="radio" id="contado" name="seleccion" value="contado-t">
        <label for="contado">Efectivo</label><br>
        <input type="radio" id="credito" name="seleccion" value="credito-t">
        <label for="credito">Credito</label>
        <div class="break"></div>
        <div class="table" id="turnos-table">
            <div class="column" style="flex-basis:13.5%; background-color: #224a67;">
                <div class="row-title">Venta</div>
            </div>
            <div class="column" style="flex-basis:20%; background-color: #356986;">
                <div class="row-title">Tiempo</div>
            </div>
            <div class="column" style="flex-basis:13.5%; background-color: #224a67;">
                <div class="row-title">Cant.</div>
