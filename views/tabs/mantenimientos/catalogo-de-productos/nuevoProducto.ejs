<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Go Market Tracker</title>
    <link rel="stylesheet" href="../../css/forms.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.1/css/selectize.default.min.css">
</head>
<body>
    <h1 class="title">Nuevo Producto</h1>
    <form action="http://localhost:5000/dashboard/mantenimientos/producto" method="post">
        <label for="codigo">
            Codigo:
            <input type="text" name="codigo" id="codigo" required autofocus="autofocus">
        </label> 
        <label for="nombre">
            Nombre:
            <input type="text" name="nombre" id="nombre" required>
        </label>
        <label for="costoQ">
            Costo Q:
            <input type="number" name="costoQ" id="costoQ" step="any" required>
        </label>
        <label for="precioPublico">
            Precio Publico:
            <input type="number" name="precioPublico" id="precioPublico" step="any" required>
        </label>
        <label for="pUtilidad">
            % de Utilidad:
            <input type="number" name="pUtilidad" id="pUtilidad" step="any" required>
        </label>
        <label for="ubicacion">
            Codigo:
            <select id="ubicacion" type="text" name="ubicacion" required></select>
        </label>
        <label for="estado">
            Estado:
            <select id="estado" name="estado">
                <option name="activo" value="activo" selected>Activo</option>
                <option name="inactivo" value="inactivo">Inactivo</option>
            </select>
        </label>
        <div class="break"></div>
        <button type="button" onclick="crear()">Nueva</button>
        <a href="/dashboard/mantenimientos/nuevo-producto">
            <button type="button">Cancelar</button>
        </a>
        <a href="/dashboard">
            <button type="button">Salir</button>
        </a>
    </form>
</body>
<!-- Load options for each field from database -->
<script src="../../js/util/getUtilidad.js"></script>
<script src="../../js/util/loadUbicaciones.js"></script>
<script src="../../js/posting/nuevoProducto.js"></script>
</html>